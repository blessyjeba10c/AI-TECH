<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/log_data_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Operational Data"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/flow_rate_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Flow Rate (L/s)"
        android:inputType="numberDecimal"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/concentration_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Pollutant Concentration (ppm)"
        android:inputType="numberDecimal"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/efficiency_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Treatment Efficiency (%)"
        android:inputType="numberDecimal"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/log_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Data" />

</LinearLayout>
